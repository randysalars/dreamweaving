[Unit]
Description=Process salars.net email queue
Documentation=https://github.com/randysalars/dreamweaving
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=rsalars
Group=rsalars
WorkingDirectory=/home/rsalars/Projects/dreamweaving
ExecStart=/home/rsalars/Projects/dreamweaving/scripts/scheduling/email-queue.sh

# Logging
StandardOutput=append:/home/rsalars/Projects/dreamweaving/logs/email_queue.log
StandardError=append:/home/rsalars/Projects/dreamweaving/logs/email_queue.log

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/rsalars/Projects/dreamweaving/logs

# Timeout for curl operations
TimeoutStartSec=60

[Install]
WantedBy=multi-user.target
