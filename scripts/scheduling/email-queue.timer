[Unit]
Description=Run email queue processor every 5 minutes
Documentation=https://github.com/randysalars/dreamweaving

[Timer]
# Run every 5 minutes
OnCalendar=*:0/5

# Run immediately if a scheduled run was missed (e.g., system was off)
Persistent=true

# Add random delay up to 30s to avoid thundering herd
RandomizedDelaySec=30

[Install]
WantedBy=timers.target
